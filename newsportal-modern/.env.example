# ============================================
# Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# Database Configuration
# ============================================
DB_URL=jdbc:mysql://localhost:3306/newsportalmodern?createDatabaseIfNotExist=true&serverTimezone=UTC&useSSL=true&requireSSL=false
DB_USERNAME=newsportal_user
DB_PASSWORD=your_secure_password_here

# ============================================
# Hibernate DDL Mode
# ============================================
# Options: validate, update, create, create-drop
# PRODUCTION: use 'validate' only!
# DEVELOPMENT: use 'update'
DDL_AUTO=validate

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8080

# Session timeout (examples: 30m, 1h, 2h)
SESSION_TIMEOUT=30m

# Cookie secure flag (set to true for HTTPS)
COOKIE_SECURE=true

# ============================================
# SSL/TLS Configuration (Production)
# ============================================
SSL_ENABLED=false
# SSL_KEYSTORE=classpath:keystore.p12
# SSL_KEYSTORE_PASSWORD=your_keystore_password

# ============================================
# Logging
# ============================================
LOG_FILE=/var/log/newsportal/application.log

# ============================================
# Application Secrets
# ============================================
# Add any additional secrets here (API keys, tokens, etc.)
# JWT_SECRET=your_jwt_secret_here
# MAIL_PASSWORD=your_email_password_here
